# Configuration GitHub Webhooks - Exemple
# Copiez ces variables dans votre fichier .env principal

# Secret pour valider les webhooks GitHub (générez avec: php artisan github-webhooks:generate-secret)
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# Préfixe de route pour les webhooks (par défaut: webhooks)
GITHUB_WEBHOOK_ROUTE_PREFIX=webhooks

# Stocker les webhooks en base de données (par défaut: true)
GITHUB_WEBHOOK_STORE=true

# Configuration Slack
SLACK_NOTIFICATIONS_ENABLED=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Canaux Slack
SLACK_CHANNEL_DEV="#dev"
SLACK_CHANNEL_PRS="#pull-requests"
SLACK_CHANNEL_ISSUES="#issues"
SLACK_CHANNEL_RELEASES="#releases"
SLACK_CHANNEL_DEPLOYMENTS="#deployments"
SLACK_CHANNEL_CI_CD="#ci-cd"
SLACK_CHANNEL_SECURITY="#security"
SLACK_CHANNEL_GENERAL="#general"

# Qualité de code
CODE_QUALITY_ENABLED=true

# Monitoring
SENTRY_ENABLED=false
SENTRY_DSN=

NEWRELIC_ENABLED=false
NEWRELIC_API_KEY=
NEWRELIC_APP_ID=

# Base de données (si différente de l'app principale)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=webhooks_db
DB_USERNAME=root
DB_PASSWORD=

# Cache pour les webhooks
CACHE_DRIVER=redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue pour les traitements asynchrones
QUEUE_CONNECTION=redis
